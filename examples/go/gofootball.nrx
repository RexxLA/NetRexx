
class gofootball      -- yes, soccer

properties private static
  chan = RexxChannel

method main(arg=String[]) static

  chan = RexxChannel()

  go kick('John')
  go kick('Alice')
  go kick('Bob')
  go kick('Emily')
  chan.write('Referee')


method kick(who) static
  loop forever
    say chan.read' kicked the ball.'
    Thread.currentThread().sleep(1000)
    chan.write(who)
  catch InterruptedException
    nop
  end
