options nostrictcase nostrictargs nostrictsignal
package org.netrexx.njpipes.stages
import org.netrexx.njpipes.pipes.


class watchp extends stage

method run()

   m = int arg()
   l = int 0
   c = int 0

   loop forever
      o = peekto()
      output(o)
      readto()

      c = c+1
      l = l+1
      if l>=m then do
         l = 0
         selectOutput(1)
         output(Rexx(c))
         selectOutput(0)
      end

   catch StageError

   end

   rc = rc()
   exit(rc*(rc<>12))

